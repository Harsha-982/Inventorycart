<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
<!--    for login page # 1-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.example.Cart.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
<!--    for Cart page  # 2-->
    <servlet>
        <servlet-name>addToCart</servlet-name>
        <servlet-class>com.example.Cart.AddToCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addToCart</servlet-name>
        <url-pattern>/AddToCart</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>Login.jsp</welcome-file>
    </welcome-file-list>
<!--    for Billing class  # 3-->
    <servlet>
        <servlet-name>billing</servlet-name>
        <servlet-class>com.example.Cart.Billing</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>billing</servlet-name>
        <url-pattern>/Billing</url-pattern>
    </servlet-mapping>
</web-app>